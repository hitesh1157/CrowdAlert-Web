{
    "extends": ["plugin:jest/all", "airbnb"],
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "react/jsx-filename-extension": "off",
        "jsx-a11y/anchor-is-valid": ["error", {
            "components": ["Link"],
            "specialLink": ["to"]
        }],
        "jest/no-hooks": "off",
        "jest/prefer-expect-assertions": "off",
        "jest/expect-expect": "off",
        "jest/no-mocks-import": "off",
        "jest/prefer-strict-equal": "off"
    },
    "globals": {
        "window": true,
        "document": true,
        "localStorage": true,
        "formData": true,
        "fileReader": true,
        "Blob": true,
        "navigator": true
    },
    "plugins": ["jest"]
}